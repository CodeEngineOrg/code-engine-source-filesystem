{
  "name": "code-engine-source-filesystem",
  "version": "1.0.1",
  "description": "A CodeEngine plugin that reads files from the filesystem",
  "keywords": [
    "code-engine-plugin",
    "code-engine-source",
    "filesystem",
    "disk",
    "io"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://engine.codes",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeEngineOrg/code-engine-source-filesystem.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "eslint src test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "engines": {
    "node": ">=12.12"
  },
  "engineStrict": true,
  "devDependencies": {
    "@code-engine/lib": "^1.0.2",
    "@code-engine/types": "^1.0.7",
    "@jsdevtools/eslint-config": "^1.0.6",
    "@jsdevtools/host-environment": "^2.0.4",
    "@jsdevtools/version-bump-prompt": "^6.0.6",
    "@types/chai": "^4.2.11",
    "@types/is-glob": "^4.0.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.23",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "mocha": "^8.0.1",
    "npm-check": "^5.9.0",
    "nyc": "^15.1.0",
    "shx": "^0.3.2",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "tmp": "^0.2.1",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@code-engine/utils": "^1.0.2",
    "@jsdevtools/assert": "^1.3.1",
    "@jsdevtools/file-path-filter": "^3.0.2",
    "@jsdevtools/readdir-enhanced": "^6.0.4",
    "chokidar": "^3.4.1",
    "is-glob": "^4.0.1"
  }
}
